<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<?include ..\Config.wxi ?>
	<Fragment>
		<!--
      * Level <= 3 is "Typical"
      * Level <= 1000 is "Complete"
    -->
		<Feature Id="StageInstrument"
		  Absent="disallow"
		  AllowAdvertise="no"
		  ConfigurableDirectory="INSTALLDIR"
		  Display="expand"
		  Level="1"
		  Title="StageInstrument">
			<ComponentRef Id="StageInstrument" />
			<ComponentRef Id="Updater" />
			<ComponentRef Id="StartMenuShortcuts" />
			<ComponentRef Id="DesktopShortcut" />
			<Feature Id="Documentation" Absent="disallow" AllowAdvertise="no" Display="hidden" Level="1" Title="Documentation">
				<ComponentGroupRef Id="DocsGroup" />
			</Feature>
			<Feature Id="Plugins" Absent="disallow" AllowAdvertise="no" Display="hidden" Level="1" Title="Plugins">
				<ComponentGroupRef Id="PluginsGroup" />
			</Feature>
		</Feature>
	</Fragment>
</Wix>
